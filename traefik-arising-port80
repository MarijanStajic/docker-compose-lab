# The content below demonstrates how to set up the reverse proxy "Traefik" with a domain name using HTTP, pointing to port 80, without any issues arising from the fact that Traefik uses port 80 by default.
# If there is a second docker-compose.yml file, you simply need to add the line "external:true" to include the network.

version: "3.8"
services:
  traefik:
    image: traefik:latest
    command:
      - --entrypoints.web.address=:80
      - --providers.docker=true
      - --api.insecure=true
    ports:
      - 8080:8080
      - 80:80
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    networks:
      - traefik
  wordpress:
    image: wordpress:latest
    ports:
      - 8069:80
    networks:
      - traefik
    labels:
      - traefik.http.routers.wordpress.rule=Host(`domain.tld`)
      - traefik.http.services.wordpress.loadbalancer.server.port=80
      - traefik.http.services.wordpress.loadbalancer.server.scheme=http
networks:
  traefik:
